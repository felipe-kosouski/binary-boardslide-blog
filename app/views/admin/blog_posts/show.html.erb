<h1>BlogPosts#show</h1>
<div>
  <h2><%= @blog_post.title %></h2>
  <%= image_tag @blog_post.cover_image if @blog_post.cover_image.present? %>
  <p><%= @blog_post.summary %></p>
  <p><%= @blog_post.content %></p>
</div>
<div>
  <p>Category: <%= @blog_post.category&.name %></p>
</div>
<div>
  <h3>Tags:</h3>
  <ul>
    <% @blog_post.tags&.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to 'Edit', edit_admin_blog_post_path(@blog_post) %> |
  <%= link_to 'Back', admin_blog_posts_path %>
</div>
<%= button_to "Delete", @blog_post, method: :delete, data: {turbo_confirm: "Are you sure?"} %>
