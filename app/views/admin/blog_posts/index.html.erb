<% @blog_posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, admin_blog_post_path(post) %></h2>
    <%= image_tag post.cover_image if post.cover_image.present? %>
    <% if post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
      <% elsif post.scheduled? %>
        <div class="p-2 rounded bg-yellow-100 text-yellow-900">Scheduled</div>
    <% end %>
    <p><%= post.summary %></p>
    <p><%= post.content %></p>
  </div>
<% end %>
<%= link_to "new post", new_admin_blog_post_path %>
